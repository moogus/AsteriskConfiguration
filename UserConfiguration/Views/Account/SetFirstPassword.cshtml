@model UserConfiguration.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
  <div>
    
    <div class='modalBackground modalClose'>
    </div>
    <div class='modalContent tabbedPopUp' style="width: 275px;">

      <fieldset>
        
        <h1>Password Management</h1>
				
      
        <p style="margin: 5px;">
          New passwords are required to be a minimum of <strong style="font-weight: bold;">@Membership.MinRequiredPasswordLength</strong>  characters in length.
        </p>

        <div style="margin: 5px;">
          <div >
            @Html.LabelFor(m => m.OldPassword)
          </div>
          <div style="margin-bottom: 5px;">
            @Html.PasswordFor(m => m.OldPassword)
						<div style="color: red;">
            @Html.ValidationMessageFor(m => m.OldPassword)
						</div>
          </div>

          <div >
            @Html.LabelFor(m => m.NewPassword)
          </div>
          <div style="margin-bottom: 5px;">
            @Html.PasswordFor(m => m.NewPassword)
					<div style="color: red;">
            @Html.ValidationMessageFor(m => m.NewPassword)
						</div>
          </div>

          <div >
            @Html.LabelFor(m => m.ConfirmPassword)
          </div>
          <div style="margin-bottom: 5px;">
            @Html.PasswordFor(m => m.ConfirmPassword)
            <div style="color: red;">
              @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
          </div>
        </div>

        <p>
          <input type="submit" class="button" value="Change Password" style="float: right;margin-top: 10px; margin-bottom: 7.5px; margin-right:12px;" />
        </p>
      </fieldset>
			  <p style="font-size: 12.5px;">Click off this window to close.</p>
    </div>
	
  
  </div>
	}
<script type="text/javascript">
	$(".modalClose").click(function (e) {
		e.preventDefault();
		window.location.replace("/Account/LogOff");
	});
</script>
