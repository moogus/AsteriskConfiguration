    <br />
    <br />
    <table id="sipContacts">
        <thead>
            <tr>
                <th style="display: none;">
                </th>
                <th>
                    Number</th>
                <th>
                    Phone Password</th>
                <th>
                    DDI<a id='showddiClassInfo' class="infoIco" /></th>
                <th>
                    CLI<a id='showcliClassInfo' class="infoIco" /></th>
                <th>
                    First Name</th>
                <th>
                    Last Name</th>
                <th>
                    Department</th>
                <th>
                    Job Title</th>
                <th>
                    Email</th>
