@model Asterisk.AccountManagement.AccountModels.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
}
@section AddToHead
{
    <link href="../../Content/userConfiguration.css" rel="stylesheet" type="text/css" />
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
    <div>
    
        <div class='modalBackground modalClose'>
        </div>
        <div class='modalContent tabbedPopUp' style="margin-top: 100px; width: 300px;">

            <fieldset>
        
                <h1>Password Management</h1>
				
      
                <p style="margin: 5px;">
                    New passwords are required to be a minimum of <strong>@Membership.MinRequiredPasswordLength</strong>  characters in length.
                </p>

                <div style="margin: 5px;">
                    <div >
                        @Html.LabelFor(m => m.OldPassword)
                    </div>
                    <div style="margin-bottom: 5px;">
                        @Html.PasswordFor(m => m.OldPassword)
                        <div style="color: red;">
                            @Html.ValidationMessageFor(m => m.OldPassword)
                        </div>
                    </div>

                    <div >
                        @Html.LabelFor(m => m.NewPassword)
                    </div>
                    <div style="margin-bottom: 5px;">
                        @Html.PasswordFor(m => m.NewPassword)
                        <div style="color: red;">
                            @Html.ValidationMessageFor(m => m.NewPassword)
                        </div>
                    </div>

                    <div >
                        @Html.LabelFor(m => m.ConfirmPassword)
                    </div>
                    <div style="margin-bottom: 5px;">
                        @Html.PasswordFor(m => m.ConfirmPassword)
                        <div style="color: red;">
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>
                </div>
      

       
            </fieldset>
			
            <div>
                <p>
                    <input type="submit" class="button accountButtonPosition" value="Change Password" style="" />
                </p>
                <p class="accountMessage" >Click off this window to close.</p>

            </div>
   
        </div>
	
  
    </div>
}
<script type="text/javascript">
    $(".modalClose").click(function(e) {
        e.preventDefault();
        window.location.replace("/Account/LogOff");
    });
</script>