@model Asterisk.ViewModels.UserDetailsViewModel
@{
    Layout = null;
}

@using (Html.BeginForm())
{
    <div class='modalContentLighter' style="width: 300px;">
        <div id="profileHeader" class="headUserConfig">
            <h1 id="userDetailsHeader" >
                @Model.Message</h1>
        </div>
        <fieldset>
            <p class="SpaceBelow message" >
                The data saved here will be displayed in the phone systems' address book. </p>
            <div>
                <div style="clear: both; margin-top: 10px;">
                    @Html.HiddenFor(m => m.Id)
                </div>
                <div>
                    <div class="SpaceBelow labelSetWidth">
                        First Name:</div>
                    <div>
                        @Html.EditorFor(m => m.FirstName)
                    </div>
                </div>
                <div style="clear: both;">
                    <div class="SpaceBelow labelSetWidth">
                        Last Name:</div>
                    <div>
                        @Html.EditorFor(m => m.LastName)
                    </div>
                </div>
                <div style="clear: both;">
                    <div class="SpaceBelow labelSetWidth">
                        Email:
                    </div>
                    <div>
                        @Html.EditorFor(m => m.Email)
                    </div>
                </div>
                <div style="clear: both;">
                    <div class="SpaceBelow labelSetWidth">
                        Department:
                    </div>
                    <div>
                        @Html.EditorFor(m => m.Department)
                    </div>
                </div>
                <div style="clear: both; margin-left: 0px;" class="SpaceBelow">
                    <div class="SpaceBelow labelSetWidth">
                        Job Title:
                    </div>
                    <div>
                        @Html.EditorFor(m => m.JobTitle)
                    </div>
                </div>
            </div>
            <p>
                <input type="submit" class="button partialButtonRight"  value="Save" />
            </p>
        </fieldset>
    </div>
}